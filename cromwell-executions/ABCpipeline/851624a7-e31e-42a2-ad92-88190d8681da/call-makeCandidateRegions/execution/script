#!/bin/bash

cd /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution
tmpDir=$(mkdir -p "/cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/tmp.fce6c474" && echo "/cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/tmp.fce6c474")
chmod 777 "$tmpDir"
export _JAVA_OPTIONS=-Djava.io.tmpdir="$tmpDir"
export TMPDIR="$tmpDir"
export HOME="$HOME"
(
cd /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution

)
out851624a7="${tmpDir}/out.$$" err851624a7="${tmpDir}/err.$$"
mkfifo "$out851624a7" "$err851624a7"
trap 'rm "$out851624a7" "$err851624a7"' EXIT
tee '/cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution/stdout' < "$out851624a7" &
tee '/cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution/stderr' < "$err851624a7" >&2 &
(
cd /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution


set -euo pipefail

mkdir outputs

python src/makeCandidateRegions.py \
    --bam /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/inputs/344356579/wgEncodeUwDnaseK562AlnRep1.chr22.bam \
    --outDir outputs \
    --chrom_sizes /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/inputs/-378025230/chr22 \
    --regions_blacklist /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/inputs/-378025230/wgEncodeHg19ConsensusSignalArtifactRegions.bed \
    --regions_whitelist /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/inputs/-378025230/RefSeqCurated.170308.bed.CollapsedGeneBounds.TSS.500bp.chr22.bed \
    --pval_cutoff 0.1 \
    --peakExtendFromSummit 250 \
    --nStrongestPeaks 3000
)  > "$out851624a7" 2> "$err851624a7"
echo $? > /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution/rc.tmp
(
# add a .file in every empty directory to facilitate directory delocalization on the cloud
cd /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution
find . -type d -exec sh -c '[ -z "$(ls -A '"'"'{}'"'"')" ] && touch '"'"'{}'"'"'/.file' \;
)
(
cd /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution
sync


)
mv /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution/rc.tmp /cromwell-executions/ABCpipeline/851624a7-e31e-42a2-ad92-88190d8681da/call-makeCandidateRegions/execution/rc

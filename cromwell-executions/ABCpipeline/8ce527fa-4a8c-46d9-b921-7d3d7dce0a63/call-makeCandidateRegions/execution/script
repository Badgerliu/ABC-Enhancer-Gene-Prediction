#!/bin/bash

cd /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution
tmpDir=$(mkdir -p "/cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/tmp.86e0ab3f" && echo "/cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/tmp.86e0ab3f")
chmod 777 "$tmpDir"
export _JAVA_OPTIONS=-Djava.io.tmpdir="$tmpDir"
export TMPDIR="$tmpDir"
export HOME="$HOME"
(
cd /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution

)
out8ce527fa="${tmpDir}/out.$$" err8ce527fa="${tmpDir}/err.$$"
mkfifo "$out8ce527fa" "$err8ce527fa"
trap 'rm "$out8ce527fa" "$err8ce527fa"' EXIT
tee '/cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution/stdout' < "$out8ce527fa" &
tee '/cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution/stderr' < "$err8ce527fa" >&2 &
(
cd /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution


set -euo pipefail

mkdir outputs

python src/makeCandidateRegions.py \
    --bam /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/inputs/344356579/wgEncodeUwDnaseK562AlnRep1.chr22.bam \
    --outDir outputs \
    --chrom_sizes /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/inputs/-378025230/chr22 \
    --regions_blacklist /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/inputs/-378025230/wgEncodeHg19ConsensusSignalArtifactRegions.bed \
    --regions_whitelist /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/inputs/-378025230/RefSeqCurated.170308.bed.CollapsedGeneBounds.TSS.500bp.chr22.bed \
    --pval_cutoff 0.1 \
    --peakExtendFromSummit 250 \
    --nStrongestPeaks 3000
)  > "$out8ce527fa" 2> "$err8ce527fa"
echo $? > /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution/rc.tmp
(
# add a .file in every empty directory to facilitate directory delocalization on the cloud
cd /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution
find . -type d -exec sh -c '[ -z "$(ls -A '"'"'{}'"'"')" ] && touch '"'"'{}'"'"'/.file' \;
)
(
cd /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution
sync


)
mv /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution/rc.tmp /cromwell-executions/ABCpipeline/8ce527fa-4a8c-46d9-b921-7d3d7dce0a63/call-makeCandidateRegions/execution/rc
